Object subclass: #GCGitWrapper	instanceVariableNames: 'localPath commitMessages'	classVariableNames: ''	poolDictionaries: ''	category: 'Gitocello-Core'!!GCGitWrapper methodsFor: 'commands' stamp: 'tfel 9/7/2009 04:19'!commit	"Commit changes to the local repository"	self		gitCommand: 'add .';		gitCommand: 'commit -m "',  self commitMessages, '"'! !!GCGitWrapper methodsFor: 'commands' stamp: 'tfel 9/7/2009 04:23'!gitCommand: aCommandString	"Enter the local repository and run the 'git' command with the parameters"	OSProcess waitForCommand: 'cd ', self localPath, '; git ', aCommandString! !!GCGitWrapper methodsFor: 'commands' stamp: 'tfel 9/7/2009 01:03'!init	self gitCommand: 'init'! !!GCGitWrapper methodsFor: 'commands' stamp: 'tfel 9/7/2009 03:29'!origin: aRemoteUrl	self gitCommand: 'remote rm origin'.	self gitCommand: 'remote add origin ', aRemoteUrl! !!GCGitWrapper methodsFor: 'commands' stamp: 'tfel 9/6/2009 18:31'!pull		self gitCommand: 'pull origin master'! !!GCGitWrapper methodsFor: 'commands' stamp: 'tfel 9/6/2009 18:30'!push	self gitCommand: 'push origin master'! !!GCGitWrapper methodsFor: 'accessing' stamp: 'tfel 9/7/2009 04:02'!commitMessages	"Answer the value of commitMessages"	^ commitMessages! !!GCGitWrapper methodsFor: 'accessing' stamp: 'tfel 9/7/2009 04:02'!commitMessages: anObject	"Set the value of commitMessages"	commitMessages := anObject! !!GCGitWrapper methodsFor: 'accessing' stamp: 'tfel 9/6/2009 23:10'!localPath	"Answer the value of localPath"	^ localPath! !!GCGitWrapper methodsFor: 'accessing' stamp: 'tfel 9/6/2009 23:10'!localPath: anObject	"Set the value of localPath"	localPath := anObject! !